{% extends 'base.html.twig' %}

{% block title %} {{ serie.nom}} | {{ parent() }}  {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-md-4">
            <img src="{{ asset('img/'~serie.poster) }}" alt="{{ serie.nom}}" class="img-fluid" >
        </div>
        <div class="col-md-8">
            <h3>Titre : </h3>
            <p>{{ serie.nom }}</p>
            <h3>Genre : </h3>
            <p>{#serie.genre #}</p>
            <h3>Synopsis : </h3>
            <p>{{ serie.synopsis }}</p>
        </div>
    </div>

{% endblock %}
