{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">genre</th>
            <th scope="col">Poster</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for serie in series %}
            <tr>
                <th scope="row">{{ serie.id }}</th>
                <td>{{ serie.nom|capitalize }}</td>
                <td>{# serie.genre|capitalize  #}</td>
                <td class="poster-admin"><img src="{{ asset('img/'~serie.poster) }}" class="w-100" alt="{{ serie.nom
                    }}"></td>
                <td><a href="{{ path("admin_update", {"id" : serie.id}) }}" class="btn btn-primary"> <i class="fas fa-edit"></i> </a>
                    <a href="{{ path("admin_delete", {"id" : serie.id}) }}" class="btn btn-danger"> <i class="fas fa-trash-alt"></i> </a>
                </td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}
